{
  "name": "coberturahighlighter",
  "displayName": "coberturahighlighter",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cpp"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "My Extension Settings",
      "properties": {
        "coberturahighlighter.hitColor": {
          "type": "string",
          "default": "#4CAF5080",
          "description": "Color for covered rows",
          "format": "color"
        },
        "coberturahighlighter.missColor": {
          "type": "string",
          "default": "#F4433680",
          "description": "Color for uncovered rows",
          "format": "color"
        },
        "coberturahighlighter.reportPattern": {
          "type": "string",
          "default": "*.cobertura",
          "description": "Glob pattern for cobertura report filenames"
        },
        "coberturahighlighter.minCoverage": {
          "type": "integer",
          "default": "80",
          "description": "Minimum line coverage in percent"
        }
      }
    },
    "commands": [
      {
        "command": "coberturahighlighter.showCoverage",
        "title": "Show Coverage"
      },
      {
        "command": "coberturahighlighter.showCoverageAll",
        "title": "Show Coverage for all open files"
      },
      {
        "command": "coberturahighlighter.hideCoverage",
        "title": "Hide Coverage"
      },
      {
        "command": "coberturahighlighter.hideCoverageAll",
        "title": "Hide Coverage for all open files"
      },
      {
        "command": "coberturahighlighter.showCoverageForReport",
        "title": "Show Coverage for all files in the report"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.91.0",
    "@types/xmldom": "^0.1.34",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "xmldom": "^0.6.0",
    "xpath": "^0.0.32"
  }
}